menu "nuttx"
depends on PLATFORM_NUTTX
	menu "STM32"
	depends on ARCH_CHIP_STM32
	menuconfig BOARD_PWM_FREQ
		int "Board default PWM frequency"
		default 1000000
		---help---
			Board default PWM frequency
	endmenu
	menu "RPI"
	depends on ARCH_CHIP_RP2040
	menuconfig BOARD_PWM_FREQ
		int "Board default PWM frequency"
		default 1000000
		---help---
			Board default PWM frequency
	endmenu
	menu "NXP"
		menu "common"
		depends on ARCH_CHIP_IMXRT || ARCH_CHIP_KINETIS || ARCH_CHIP_S32K1XX || ARCH_CHIP_S32K344
		menuconfig BOARD_PWM_FREQ
			int "Board default PWM frequency"
			default 1000000
			---help---
				Board default PWM frequency
		endmenu
		menu "s32k3xx"
		depends on ARCH_CHIP_S32K3XX
		menuconfig BOARD_PWM_FREQ_S32K3XX
			int "Board default PWM frequency"
			default 160000000
			---help---
				Board default PWM frequency
		endmenu
	endmenu
endmenu
