menu "nuttx"

	config PLATFORM_NUTTX_STM32
		bool
		default n

	config PLATFORM_NUTTX_RPI
		bool
		default n

	config PLATFORM_NUTTX_NXP_DEFAULT
		bool
		default n

	config PLATFORM_NUTTX_NXP_S32K3XX
		bool
		default n

	menu "STM32"
	depends on PLATFORM_NUTTX_STM32
	menuconfig BOARD_PWM_FREQ
		int "Board default PWM frequency"
		default 1000000
		---help---
			Board default PWM frequency
	endmenu
	menu "RPI"
	depends on PLATFORM_NUTTX_RPI
	menuconfig BOARD_PWM_FREQ
		int "Board default PWM frequency"
		default 1000000
		---help---
			Board default PWM frequency
	endmenu
	menu "NXP"
	depends on PLATFORM_NUTTX_NXP_DEFAULT || PLATFORM_NUTTX_NXP_S32K3XX
		menu "common"
		depends on PLATFORM_NUTTX_NXP_DEFAULT
		menuconfig BOARD_PWM_FREQ
			int "Board default PWM frequency"
			default 1000000
			---help---
				Board default PWM frequency
		endmenu
		menu "s32k3xx"
		depends on PLATFORM_NUTTX_NXP_S32K3XX
		menuconfig BOARD_PWM_FREQ_S32K3XX
			int "Board default PWM frequency"
			default 160000000
			---help---
				Board default PWM frequency
		endmenu
	endmenu
endmenu
